{
    "name": "facubrun/belur-framework",
    "description": "simple php Framework inspired by Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Belur\\": "src/"
        },
        "files": [
            "src/Helpers/app.php",
            "src/Helpers/http.php",
            "src/Helpers/string.php",
            "src/Helpers/session.php",
            "src/Helpers/auth.php"
        ]
    },
    "scripts": {
        "tests": "phpunit --colors=always --testdox tests/",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --diff --config=.php-cs-fixer.php"
    },
    "autoload-dev": {
        "psr-4": {
            "Belur\\Tests\\": "tests"
        }
    },
    "authors": [
        {
            "name": "facubrun",
            "email": "facundobrun0303@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.92"
    },
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "symfony/console": "^7.4"
    }
}
